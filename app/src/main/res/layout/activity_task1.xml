<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task1_bg"
    tools:context=".Task1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="#C1FFFFFF"
        android:textSize="28sp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Affordable home\n Best Furnitares."
        android:textColor="@color/white"
        android:textSize="43sp"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="343dp"
        android:layout_height="319dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/task_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="50dp"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@+id/imageView8"

    >

    <TextView
        android:id="@+id/editText17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task1_input"
        android:hint="Get Started"
        android:paddingVertical="15dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/task1_input2"
        android:src="@drawable/task1_1"
        app:layout_constraintEnd_toEndOf="@+id/editText17"
        app:layout_constraintTop_toTopOf="@+id/editText17"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>